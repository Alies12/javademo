<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="hexlet.code.demo.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <TableView fx:id="tableV" prefHeight="640.0" prefWidth="800.0">
     <columns>
       <TableColumn fx:id="cType" prefWidth="75.0" text="Тип" />
       <TableColumn fx:id="cName" prefWidth="75.0" text="Имя Компании" />
       <TableColumn fx:id="cPhone" prefWidth="75.0" text="Телефон" />
       <TableColumn fx:id="cDiscount" prefWidth="75.0" text="Скидка" />
     </columns>
   </TableView>

  <Button onAction="#onHelloButtonClick" text="Hello!" />
</VBox>
